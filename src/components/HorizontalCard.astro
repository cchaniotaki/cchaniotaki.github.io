---
const { title, img, desc, url, badge, tags, skills, date, target = "_blank" } = Astro.props;
import { Image } from "@astrojs/image/components";
---

<div
  class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            aspectRatio="16:7"
            width={750}
            format="webp"
            alt={title}
            class="max-w-full md:max-w-[13rem] rounded-lg object-fit"
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>
        <span class="font-light text-sm">{date}</span>
        <p class="py-1 text-1xl">{desc}</p>
        <div class="card-actions justify-end">
          {
            tags &&
              tags.map((tag) => <div class="badge badge-outline">{tag}</div>)
          }
        </div>
        <div class="card-actions text-sm text-gray-500">
          {skills}
        </div>
      </div>
    </div>
  </a>
</div>
